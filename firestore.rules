rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // PinWorld 足迹数据
    match /pins/{pinId} {
      // 允许所有人读取（公开分享）
      allow read: if true;
      // 允许认证用户写入
      allow write: if request.auth != null;
    }
    
    // 用户配置数据
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 默认规则：其他集合
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
